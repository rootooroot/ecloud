<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

	<import resource="classpath:spring-dao.xml" />

	<context:component-scan base-package="com.chinaops.web.controller" />

	<mvc:annotation-driven />
	
	<mvc:resources mapping="/js/**" location="/js/" />
	<mvc:resources mapping="/css/**" location="/css/" />
	<mvc:resources mapping="/images/**" location="/images/" />
	<mvc:resources mapping="/include/**" location="/include/" />
	
	<mvc:resources mapping="/aboutus/**" location="/aboutus/" />
	<mvc:resources mapping="/help/**" location="/help/" />
	<mvc:resources mapping="/product/**" location="/product/" />
	<mvc:resources mapping="/solution/**" location="/solution/" />
	
